@{
    ViewBag.Title = "Accounts";
    var view = new VstViewFormat
    {
        DataSource = Model,
        Columns = new List<ColumnInfo>
{
            new ColumnInfo { Name = "Id", ClassName = "lg-12", Caption = "Tên người dùng", AllowNull = false },
            new ColumnInfo { Name = "Role", ClassName = "lg-12", Caption = "Role", Input = "select" },
            new ColumnInfo { Name = "Password", ClassName = "lg-12", Caption = "Mật khẩu", Input = "none" },
        },
    };
}

<h2>@ViewBag.Title</h2>
<style>
    body {
        top: 0;
        left: 0;
        color: #000;
        font: 14px Arial;
        margin: 0 auto;
        padding: 0;
        position: relative;
        background-image: url("../../Content/Image/background.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }

    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 40px;
        background-color: black;
        color: white;
        text-align: center;
    }

    .Id {
        width: 200px;
    }

    .Role {
        width: 80px;
    }

    h2 {
        padding-top: 50px;
        text-align: center;
    }
</style>

<div id="main-content"></div>

<script>
    var fields = @view.HtmlColumns;
    var values = @view.HtmlData;

    fields[1].options = ["Admin", "Guest"];
    var table = new ApiTable("/account/", fields, values, 7, "gear");
</script>

