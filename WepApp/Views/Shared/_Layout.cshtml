<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/Site.css?v=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/vst-form.js?v=1.0.2.1"></script>
    <script src="~/Scripts/vst.js?v=1.0.4.1"></script>
</head>
<body>
    <style>
        body {
            top: 0;
            left: 0;
            color: #000;
            font: 14px Arial;
            margin: 0 auto;
            padding: 0;
            position: relative;
            background-image: url("../../Content/Image/background.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        #menu ul {
            margin: 0;
            background: #000;
            list-style-type: none;
            text-align: right;
            padding-right: 100px;
        }

        #menu li {
            color: #f1f1f1;
            display: inline-block;
            line-height: 40px;
            padding: 5px 10px;
        }

        #menu a {
            text-decoration: none;
            color: #fff;
            display: block;
        }

            #menu a:hover {
                color: antiquewhite;
            }
    </style>
    <div id="menu" class="navbar-fixed-top">
        <div>
            <div>
                @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                @* <a class="navbar-brand" href="/">Lập trình nâng cao</a>*@
            </div>
            <div>
                @if (ViewBag.Account != null)
                {
                <ul>
                    <li><a href="/@ViewBag.Account.Role">Home</a></li>
                    <li><a href="/Device2Result/Index">Devices</a></li>
                    <li><a href="/analysis">Analysis</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                    @*<li><a href="/device">Devices</a></li>*@
                    <li><a href="/home/logout">Logout</a></li>
                </ul>
                }
                else
                {
                    <ul>
                        <li><a href="/home/login">Login</a></li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
        @*<footer class="footer">
                <br />
                <p>&copy; @DateTime.Now.Year - Copyright by Group 2</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
