@model IEnumerable<WepApp.Newdevice>

@{
    ViewBag.Title = "Devices";
}
<style>
    h2 {
        margin-top: 5%;
    }

    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        height: 40px;
        background-color: black;
        color: white;
        text-align: center;
    }

    h2 {
        padding-top: 50px;
        text-align: center;
    }

    .table {
    }
</style>
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Deviceid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Devicename)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Temperature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Humidity)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Deviceid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Devicename)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Temperature)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Humidity)
                </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Deviceid }) |
                @Html.ActionLink("Details", "Details", new { id = item.Deviceid }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Deviceid })
            </td>
        </tr>
    }

</table>

<footer class="footer">
    <br />
    <p> Copyright &copy; by Group 2</p>
</footer>
